{
  "name": "@syc-tech/qrmesh",
  "version": "0.1.0",
  "description": "TCP-like protocol for peer-to-peer communication over QR codes",
  "type": "module",
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    ".": "./index.ts",
    "./chat": "./demo/chat.ts"
  },
  "files": [
    "*.ts",
    "demo/*.ts"
  ],
  "scripts": {
    "build:demo": "esbuild demo/chat.ts --bundle --outfile=dist/chat.js --format=esm --target=es2020 --minify",
    "build": "npm run build:demo && cp demo/index.html dist/",
    "dev": "esbuild demo/chat.ts --bundle --outfile=dist/chat.js --format=esm --target=es2020 --servedir=dist --serve=8080"
  },
  "keywords": [
    "qr",
    "qrcode",
    "tcp",
    "mesh",
    "p2p",
    "peer-to-peer",
    "web-component",
    "chat"
  ],
  "author": "syc-tech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syc-tech/qrmesh.git"
  },
  "peerDependencies": {
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.0"
  },
  "dependencies": {
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.0.0"
  }
}
